<form class="form-horizontal col-xs-6 col-md-offset-3" method="post">
    <h2 class = "col-md-offset-1">NEW MESSAGE</h2>
    <div class="form-group">
        <label for="inputTo" class="control-label col-xs-2">From</label>
        <div class="col-xs-8">
            <input name="to" type="text" class="form-control" id="inputTo" placeholder="email user" readonly value="{{message.from.email}}">
        </div>
    </div>
    <div class="form-group">
        <label for="inputTitle" class="control-label col-xs-2">Title</label>
        <div class="col-xs-8">
            <input name="title" type="text" class="form-control" id="inputTitle" placeholder="Title" readonly value="{{message.title}}">
        </div>
    </div>
    <div class="form-group">
        <label for="inputContent" class="control-label col-xs-2">Text</label>
        <div class="col-xs-8">
            <input name="content" type="text" class="form-control" id="inputContent" placeholder="Your message" readonly value="{{message.content}}">
        </div>
    </div>
</form>